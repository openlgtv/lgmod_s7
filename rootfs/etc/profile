#cp /etc/*.sh /lgsw/
cd /lgsw

#echo -ne "\nDone\n\n"


# LG rc.sysinit
export PATH=/bin:/sbin:/usr/bin:/usr/sbin

# LG lginit
export PATH=$PATH:/usr/local/bin
export LD_LIBRARY_PATH=/lib:/usr/lib:/usr/local/lib:/mnt/addon/lib:/mnt/addon/stagecraft/lib
export LOG_CALLER=NO
export OSAMEM_SIZE=0x200000
export LOAD_SYM=1
export HOOK_SEGV=YES
export IS_NFS=NO
export TERM=vt100
export ADDON_SYS_PATH=/mnt/addon
export ADDON_RES_PATH=/mnt/addon/res
export ADDON_APP_CTRL=addon_mgr
export ADDON_APP_BATCH_LIST=addon_mgr.bat
export FLASH_APP_NAME=/mnt/addon/stagecraft/bin/stagecraft
export FLASH_EMANUAL_PATH=/mnt/addon/contents/emanual/emmanager.swf

# LG after lginit
export OSAINIT=done


# environment
export TERMINFO_DIRS=/lib/terminfo:/usr/share/terminfo
export TERMCAP=/etc/termcap
export HOME=/mnt/lg/user/root

after=/lg/user/RA; # symbolic link
export PATH="$PATH:$after${PATH//:/:$after}"
export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$after${LD_LIBRARY_PATH//:/:$after}"
export TERMINFO_DIRS="$TERMINFO_DIRS:$after${TERMINFO_DIRS//:/:$after}"
unset after


